-- Đảm bảo Lighting được sử dụng local Lighting = game:GetService("Lighting")

-- Cấu hình ánh sáng hoàng hôn local function setSunsetShader() Lighting.TimeOfDay = "18:30:00" -- Giờ hoàng hôn Lighting.Brightness = 0.5 Lighting.OutdoorAmbient = Color3.fromRGB(255, 94, 77) -- Màu đỏ cam nhẹ Lighting.Ambient = Color3.fromRGB(255, 153, 102) Lighting.FogEnd = 500 -- Tạo hiệu ứng mờ xa Lighting.FogColor = Color3.fromRGB(255, 140, 105)

-- Hiệu ứng màu sắc của bầu trời
if Lighting:FindFirstChild("Sky") then
    local sky = Lighting:FindFirstChild("Sky")
    sky.SkyboxBk = "rbxassetid://12345678" -- Đổi ID thành hình nền hoàng hôn phù hợp
    sky.SkyboxDn = "rbxassetid://12345678"
    sky.SkyboxFt = "rbxassetid://12345678"
    sky.SkyboxLf = "rbxassetid://12345678"
    sky.SkyboxRt = "rbxassetid://12345678"
    sky.SkyboxUp = "rbxassetid://12345678"
end

end

-- Gọi hàm để áp dụng hiệu ứng setSunsetShader()
