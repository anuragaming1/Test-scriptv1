-- Đảm bảo Lighting được sử dụng local Lighting = game:GetService("Lighting")

-- Cấu hình ánh sáng hoàng hôn nâng cao local function setSunsetShader() Lighting.TimeOfDay = "18:30:00" -- Giờ hoàng hôn Lighting.Brightness = 0.7 Lighting.OutdoorAmbient = Color3.fromRGB(255, 120, 90) -- Màu đỏ cam ấm hơn Lighting.Ambient = Color3.fromRGB(255, 160, 120) Lighting.FogEnd = 400 -- Giảm khoảng cách sương mù để tạo hiệu ứng mờ hơn Lighting.FogStart = 50 Lighting.FogColor = Color3.fromRGB(255, 110, 90)

-- Tăng độ tương phản của ánh sáng mặt trời
Lighting.ColorShift_Top = Color3.fromRGB(255, 100, 80)
Lighting.ColorShift_Bottom = Color3.fromRGB(150, 60, 40)

-- Thêm hiệu ứng Bloom để ánh sáng mềm mại hơn
local bloom = Instance.new("BloomEffect")
bloom.Intensity = 0.7
bloom.Threshold = 0.9
bloom.Size = 24
bloom.Parent = Lighting

-- Thêm hiệu ứng DepthOfField để làm mờ nền xa hơn
local depth = Instance.new("DepthOfFieldEffect")
depth.FarIntensity = 0.5
depth.FocusDistance = 100
depth.InFocusRadius = 50
depth.NearIntensity = 0.3
depth.Parent = Lighting

-- Hiệu ứng màu sắc của bầu trời
if Lighting:FindFirstChild("Sky") then
    local sky = Lighting:FindFirstChild("Sky")
    sky.SkyboxBk = "rbxassetid://12345678" -- Đổi ID thành hình nền hoàng hôn phù hợp
    sky.SkyboxDn = "rbxassetid://12345678"
    sky.SkyboxFt = "rbxassetid://12345678"
    sky.SkyboxLf = "rbxassetid://12345678"
    sky.SkyboxRt = "rbxassetid://12345678"
    sky.SkyboxUp = "rbxassetid://12345678"
end

end


